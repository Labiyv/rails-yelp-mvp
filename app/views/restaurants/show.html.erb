
<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.category %></h2>
<h2><%= @restaurant.phone_number %></h2>
<% @restaurant.reviews.each  do |review| %>
  <div class="reviews">
    <p><%= review.content %></p>
    <p>&nbsp;:&nbsp;</p>
    <p><%= "*" * review.rating %></p>
  </div>
<% end %>

<a><%= link_to "Back to List", restaurants_path, class: "btn btn-warning" %><a>
<a><%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %><a>


